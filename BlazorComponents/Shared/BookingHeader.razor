@using AppLogic.BaseClasses


<section class="row mb-2">
	<label class="col-form-label-sm col-md-3">Booking date</label>
	<div class="col-md-3">
		<InputDate class="form-control form-control-sm" @bind-Value="@FormModel.BookingDate" disabled="@Disabled" />
	</div>

	<label class="col-form-label-sm col-md-3">Approver</label>
	<div class="col-md-3">
		<InputText class="form-control form-control-sm" @bind-Value="@FormModel.Approver" disabled="@Disabled"  />
	</div>	
</section>

@code {
	[Parameter]
	public BaseBookingCommand FormModel { get; set; }

	[Parameter]
	public bool Disabled { get; set; }


	protected override void OnParametersSet()
	{
		if (FormModel == null) FormModel = new();
		base.OnParametersSet();
	}
}
